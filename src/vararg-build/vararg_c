print << "END";
/* Autogenerated by vararg_c */

END

while (<>)
{
  unless (m|^//|)
  {
    # print $_;

    chomp;

    my ($tag, $count, $pattern) = split ('\s+', $_);

    # print "($tag, $count, $pattern)\n";

    my @args;
    my $protoype;
      
    print << "END";
int
TIFFSetField_$tag (TIFF* tif, $pattern arg1)
{
  return TIFFSetField (tif, $tag, arg1);
}

$pattern
TIFFGetField_$tag (TIFF* tif)
{
  $pattern arg1;

  TIFFGetField (tif, $tag, &arg1);

  return arg1;
}

END
  }
}

